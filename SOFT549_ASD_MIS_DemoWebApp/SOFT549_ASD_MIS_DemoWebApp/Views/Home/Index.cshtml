@model SOFT549_ASD_MIS_DemoWebApp.Models.Authentication

@{
    ViewData["Title"] = "Home Page";
}
<br />
<h3>Login<small class="text-muted"> - please enter user credentials.</small></h3>
<div class="login-wrapper" style="text-align:center; vertical-align:middle">
    <div class="login-form">
        @using (Html.BeginForm())
        {
            <div>
                <div class="form-group centerlook">
                    <h1> Login </h1>
                </div>
                <div class="form-group centerlook">
                    <label>Username: </label>
                    @Html.EditorFor(model => model.Username)
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
                <div class="form-group centerlook">
                    <label>Password: </label>
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="form-group error">
                    @if (@ViewBag.NotValidUser != null)
                    {
                        <label>@ViewBag.NotValidUser</label>
                    }
                </div>

                <div class="loginbtn">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        }








