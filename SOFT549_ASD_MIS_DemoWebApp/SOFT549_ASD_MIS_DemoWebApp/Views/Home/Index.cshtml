@{
    ViewData["Title"] = "Home Page";
}
<br />
<h3>Login<small class="text-muted"> - please enter user credentials.</small></h3>
<div class="login-wrapper" style="text-align:center; vertical-align:middle">
    <div class="login-form">
        <form asp-area="" asp-controller="User" asp-action="Overview" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username"
                       required="required" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password"
                       required="required" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    Login
                </button>
            </div>
        </form>
    </div>
</div>

