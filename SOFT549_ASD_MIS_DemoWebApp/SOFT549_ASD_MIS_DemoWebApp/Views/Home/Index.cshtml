@model SOFT549_ASD_MIS_DemoWebApp.Models.Authentication

@{
    ViewData["Title"] = "Home Page";
}
<br />
<h3>Login<small class="text-muted"> - please enter user credentials.</small></h3>

<div class="login-wrapper">
    <div class="login-form">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Username: </label>
                @Html.EditorFor(model => model.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Username)
            </div>
            <div class="form-group">
                <label>Password: </label>
                @Html.EditorFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <div class="form-group error">
                @if (@ViewBag.NotValidUser != null)
                {
                    <label>@ViewBag.NotValidUser</label>
                }
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    Login
                </button>
            </div>
        }
    </div>
</div>






