            <div class="col-md-6">
                <div class="form-group">
                    <fieldset>
                        <label class="control-label" for="readOnlyInput">Client</label>
                        <input class="form-control" id="readOnlyClientName" type="text" placeholder="Organisation Name" readonly="" />
                    </fieldset>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <fieldset>
                        <label class="control-label" for="readOnlyInput">Project Manager</label>
                        <input class="form-control" id="readOnlyProjManager" type="text" placeholder="Project Manager" readonly="" />
                    </fieldset>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <fieldset>
                        <label class="control-label" for="readOnlyInput">Contact</label>
                        <input class="form-control" id="readOnlyProjManagerContact" type="text" placeholder="something@something.co.uk" readonly="" />
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <fieldset>
                        <label class="control-label" for="readOnlyInput">Project Start Date</label>
                        <input class="form-control" id="readOnlyProjStartDate" type="text" placeholder="Example: 30/12/2019" readonly="" />
                    </fieldset>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <fieldset>
                        <label class="control-label" for="readOnlyInput">Predicted Completion Date</label>
                        <input class="form-control" id="readOnlyProjPredFinDate" type="text" placeholder="Example: 01/01/2020" readonly="" />
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <fieldset>
                        <label class="control-label" for="readOnlyInput">Predicted Project Cost</label>
                        <input class="form-control" id="readOnlyProjPredCost" type="text" placeholder="x,xxx person hours" readonly="" />
                    </fieldset>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <fieldset>
                        <label class="control-label" for="readOnlyInput">Actual Project Cost</label>
                        <input class="form-control" id="readOnlyProjActualCost" type="text" placeholder="x,xxx person hours * staff pay" readonly="" />
                    </fieldset>
                </div>
            </div>
        </div>

    </fieldset>
</form>
