@model SOFT549_ASD_MIS_DemoWebApp.Models.ViewModels.User.Overview

@{
    ViewData["Title"] = "Project overview";
}
<br />
<h3>ASD Projects Overview</h3>
<hr />
<fieldset>
    <legend>Project details</legend>

    <div class="row">
        <div class="col-md-6">
            <form>
                @using (Html.BeginForm("ProjectOverview", "User", FormMethod.Get))
                {
                    <div class="form-group">
                        <label for="projectSelect">Project select</label>
                        <fieldset>
                            @Html.DropDownListFor(x => x.ProjectId, Model.Projects, "Select Project", new { @class = "form-control", @onchange = "this.form.submit();" })

                            @*<select class="form-control" id="projectSelect">
                                <option>Database project 1</option>
                                <option>Database project 2</option>
                                <option>Database project 3</option>
                            </select>*@
                        </fieldset>
                    </div>
                }
            </form>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <fieldset>
                    <label class="control-label" for="readOnlyInput">Client</label>
                    <input asp-for="ClientName" class="form-control" id="readOnlyClientName" type="text" readonly="" />
                </fieldset>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <fieldset>
                    <label class="control-label" for="readOnlyInput">Project Manager</label>
                    <input asp-for="StaffName" class="form-control" id="readOnlyProjManager" type="text" readonly="" />
                </fieldset>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <fieldset>
                    <label class="control-label" for="readOnlyInput">Contact</label>
                    <input asp-for="StaffContactDetails" class="form-control" id="readOnlyProjManagerContact" type="text" readonly="" />
                </fieldset>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <fieldset>
                    <label class="control-label" for="readOnlyInput">Project Start Date</label>
                    <input asp-for="PredictedLaunchDate" class="form-control" id="readOnlyProjStartDate" type="text" readonly="" />
                </fieldset>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <fieldset>
                    <label class="control-label" for="readOnlyInput">Predicted Completion Date</label>
                    <input asp-for="PredictedCompletionDate" class="form-control" id="readOnlyProjPredFinDate" type="text" readonly="" />
                </fieldset>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <fieldset>
                    <label class="control-label" for="readOnlyInput">Predicted Project Cost</label>
                    <input asp-for="PredictedCost" class="form-control" id="readOnlyProjPredCost" type="text" readonly="" />
                </fieldset>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <fieldset>
                    <label class="control-label" for="readOnlyInput">Actual Project Cost</label>
                    <input asp-for="ActualCost" class="form-control" id="readOnlyProjActualCost" type="text" readonly="" />
                </fieldset>
            </div>
        </div>
    </div>

</fieldset>
