<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASD Web Application</title>
    <!--    Environment include and exclude methods are generated by MVC templates. CSS taken from Bootswatch.com/Lux   -->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_Lux.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_Lux.min.css" />
        <script src="~/lib/bootstrap/jquery/dist/jquery.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_Lux.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap_Lux.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <!--    Navbar for _Layout.cshtml.  This is used for Login, About and contact pages.    -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <!--    Custom class for ASD logo on login page header. Image is resized.     -->
        <div class="header-thumbnail" border="0">
            <img src="~/images/ASD_header_logo.png" alt="Active Software Development" width=185 height=51 />
        </div>
        <!--    Button class is the burger button found on the Navbar when the page size is reduced.    -->
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!--    Nav-item's are placed in a list so during resize, it can be displayed vertically.   -->
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"></li>
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Login<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
    <!--    End of Navbar.    -->
    <!--    Insert body content from other pages in here.   -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <!--    Custom class css styling for footer.    -->
            <div class="site-footer">
                <br />
                <div class="container-fluid">
                    <!--    Commented out code was an attempt to put in the PND Company logo, however it impacted upon Mobile View and so was taken out.    -->
                    @*<div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">*@
                    <div class="footer-text">
                        <p> ASD Management Information System </p>
                        <p>&copy; 2019 - Pilgrim Ninja Development</p>
                    </div>
                    @*</div>*@
                    @*<div class="col-4">
                            <div class="footer-thumbnail">
                                <img class="float-right" src="~/images/PND_footer_logo.png" alt="Pilgrim Ninja Development" width="76" height="78" />
                            </div>
                        </div>*@
                </div>
            </div>
            @*</div>*@
        </footer>
    </div>

    <!--    Javascript needed for burger button on collapsible navbar to work.   -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
