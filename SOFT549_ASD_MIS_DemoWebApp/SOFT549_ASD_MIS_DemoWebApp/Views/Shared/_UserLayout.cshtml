<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASD Web Application</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_Lux.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/bootstrap/jquery/dist/jquery.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_Lux.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap_Lux.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="header-thumbnail" border="0">
            <img src="~/images/ASD_header_logo.png" alt="Active Software Development" width=185 height=51 />
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="Overview">Overview<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="RequestForQuotes" asp-action="Index">Quote System</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Activities" asp-action="Index">Activities</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Tasks" asp-action="Index">Tasks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Staffing" asp-action="Index">Staff</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Titles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <div class="site-footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4 col-sm-3 col-xs-2"></div>
                        <div class="col-md-4 col-sm-6 col-xs-8">
                            <div class="footer-text">
                                <p> ASD Management Information System </p>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-3 col-xs-2">
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
